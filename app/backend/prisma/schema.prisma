generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
  Sessions Sessions[]
}

model Sessions {
  // this will be replace _id this exit in MongoDB
  // id String @id @default(auto()) @map("_id") @db.ObjectId
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  session_name String?
  user         User      @relation(fields: [user_id], references: [id])
  user_id      String    @db.ObjectId
  Prompts      Prompts[]
}

model Prompts {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  prompt_text    String
  session        Sessions         @relation(fields: [session_id], references: [id])
  session_id     String           @db.ObjectId
  AlterGenerated AlterGenerated[]
}

model AlterGenerated {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  alters    String[]
  prompt    Prompts  @relation(fields: [prompt_id], references: [id])
  prompt_id String   @db.ObjectId
}


