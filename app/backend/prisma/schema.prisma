generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String    @unique
  password String
  Sessions Session[]
}

model Session {
  // this will be replace _id this exit in MongoDB
  // id String @id @default(auto()) @map("_id") @db.ObjectId
  id           String   @id @default(auto()) @map("_id") @db.ObjectId // type of id is ObjectId
  session_name String?
  user         User     @relation(fields: [user_id], references: [id])
  user_id      String   @db.ObjectId
  Prompts      Prompt[]
}

model Prompt {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  prompt_text String
  session     Session @relation(fields: [session_id], references: [id])
  session_id  String  @db.ObjectId
  Output      Output?
}

model Output {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  messages  String[]
  prompt    Prompt   @relation(fields: [prompt_id], references: [id])
  prompt_id String   @unique @db.ObjectId
}
